<div class="row col-12 col-lg-8">
  <!-- Search selectors -->
  <div class="col-3">
    <div class="list-group" id="list-tab" role="tablist">
      <a class="list-group-item list-group-item-action active clear-result" id="list-section-list" data-toggle="list" href="#list-section" role="tab" aria-controls="section">Classe</a>
      <%= link_to "Groupes", "#list-group", data: {toggle: "list"}, class: "list-group-item list-group-item-action clear-result", id:"list-name-list"%>
      <a class="list-group-item list-group-item-action clear-result" id="list-name-list" data-toggle="list" href="#list-name" role="tab" aria-controls="name">Nom</a>
    </div>
  </div>
  <div class="col-9">
    <div class="tab-content" id="nav-tabContent">
      <!-- Section search -->
      <div class="tab-pane fade show active" id="list-section" role="tabpanel" aria-labelledby="list-section-list">
        <!--Section selectors-->
        <ul class="nav nav-tabs justify-content-around">
          <%= render  "layouts/search/section_select", section: 6 %>
          <%= render  "layouts/search/section_select", section: 5 %>
          <%= render  "layouts/search/section_select", section: 4 %>
          <%= render  "layouts/search/section_select", section: 3 %>
        </ul>

        <!--Sections results content-->
        <div id="section-results"></div>
      </div>
      <!-- Group search -->
      <div class="tab-pane fade row" id="list-group" role="tabpanel" aria-labelledby="list-group-list">
        <p>Liste des groupes : </p>
        <ul>
          <% if @groups %>
            <% @groups.each do |group| %>
              <li class=""><%= link_to "#{group.name}", search_path(group: group.id), remote: true %></li>
            <% end %>
          <% end %>
        </ul>

        <div id="group-results"></div>
      </div>

      <!-- Name search -->
      <div class="tab-pane fade" id="list-name" role="tabpanel" aria-labelledby="list-name-list">
        <p>Recherche par Ã©leve</p>
        <div class="d-flex">
          <input onchange="$('#student-search').attr('href', '/search?student=' + this.value);" type="text" name="student" id="student" class="form-control w-50">
          <a class="btn btn-secondary" id="student-search" data-remote="true" data-method="get" href="/search?student=">Rechercher</a>
        </div>
        <div id="student-results"></div>
      </div>
    </div>
  </div>
</div>

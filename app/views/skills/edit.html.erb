<h4>Modifier la compétence "<%= @skill.name %>"</h4>
<div class="col-6 col-xl-6 pb-3">
  <div class="row">
    <div class="col">
      <div class="card-header">
        <div class="card-body">
          <%= form_for @skill  do |f| %>
            <div class="form-group">
              <%= f.label "Changer le nom:" %><br>
              <%= f.text_field :name, class: "form-control"%><br>
            </div>
            <div class="form-group">
              <%= f.label "Changer la description:" %><br>
              <%= f.text_area :description, class: "form-control"%><br>
            </div>
            <div class="form-group">
              <%= f.label "Changer le domaine associé :" %><br>
              <%= f.select(:domain_id, options_for_select(Domain.pluck(:name, :id)), {:class => "form-control"}) %><br>
            </div>
            <%= f.submit "Valider", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to "Revenir à l'index", skills_path, class:"btn btn-info" %>

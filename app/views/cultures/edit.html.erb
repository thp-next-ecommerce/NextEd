<h3>Modifier la culture "<%= @culture.name %>" </h3>
<div class="col-6 col-xl-6 pb-3">
  <div class="row">
    <div class="col">
      <div class="card-header">
        <div class="card-body">
          <%= form_with model: @culture, local: true do |f| %>
            <div class="form-group">
              <%= f.label "Changer le nom:" %><br>
              <%= f.text_field :name, class: "form-control"%><br>
            </div>
            <div class="form-group">
              <%= f.label "Changer la description:" %><br>
              <%= f.text_area :description, class: "form-control"%><br>
            </div>
            <%= f.submit "Valider", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

